{
  "name": "@petr-ptacek/js-utils",
  "version": "1.0.0",
  "description": "JavaScript library with helper functions.",
  "main": "./dist/js-utils.cmj.min.js",
  "module": "./dist/js-utils.esm.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "build:types": "rimraf ./types && tsc -p ./tsconfig.build.json --declaration --emitDeclarationOnly --declarationDir ./types",
    "build:src": "rimraf ./dist && rollup -c",
    "build": "npm run build:types & npm run build:src",
    "test:watchAll": "npm run test -- --watchAll",
    "test:watch": "npm run test -- --watch --notify",
    "test": "jest --config ./jest.config.js"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "jest": "^26.5.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.30.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/petr-ptacek/js-utils.git"
  }
}
